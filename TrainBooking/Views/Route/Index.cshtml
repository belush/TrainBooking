@model IEnumerable<TrainBooking.Models.RouteModels.RouteViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Маршруты</h2>

@if (User.IsInRole("Admin"))
{
    <p>
    @Html.ActionLink("Создать", "Create")
</p>
}


<div>
    @using (Ajax.BeginForm("RouteSearch", new AjaxOptions { UpdateTargetId = "results" }))
{
    <div style="background: #F1F1F1">
        <text>Откуда</text>
        <input type="text" name="startingStationName" style="width: 200px; margin-bottom: 0px; " />
        <text> - Куда</text>
        <input type="text" name="lastStationName" style="width: 200px; margin-bottom: 0px; " />
        <text>Отправление</text>
        <input type="date" name="startingDateTime" style="width: 150px; margin-bottom: 0px; ">
        <input type="submit" class="btn btn-info" value="Поиск" />
    </div>
}
    <div id="results">@Html.Action("RouteSearch")</div>
</div>

@section Scripts {
    @Scripts.Render("~/scripts/jquery-1.7.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
}