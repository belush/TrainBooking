@using Microsoft.Ajax.Utilities
@model IEnumerable<TrainBooking.Models.WagonModels.WagonViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Выбор места</h2>





<div>
    @using (Ajax.BeginForm("RouteChoose", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <fieldset>
            Откуда
            @Html.DropDownList("startingStationId", ViewData["stations"] as List<SelectListItem>)
