@using Microsoft.Ajax.Utilities
@model IEnumerable<TrainBooking.Models.WagonModels.WagonViewModel>


<div id="choosehresults">

    <h3>Все вагоны:</h3>

    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WagonType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WagonType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerPlace)
                </td>
                <td>
                    <table>
                        <tr>
                            @for (int i = 0; i < item.WagonType.NumberOfPlaces; i++)
                            {
                                if ((i % 10) == 0)
                                {
                                <tr></tr>
                                }

                                if (item.EmptyPlaces.Contains(i + 1))
                                {
                                    <td>
                                        @(i + 1)
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.ActionLink((i + 1).ToString(), "BuyTicket", new { id = item.Id, placeNumber = i + 1 })
                                    </td>
                                }
                            }
                </tr>
            </table>

            </td>
            <td>
                <br />

            </td>
            </tr>
        }

        </table>

    </div>